<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="JcmPersistentUnit"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.ocherve.jcm.model.JcmAccessType</class>
		<class>com.ocherve.jcm.model.JcmBooking</class>
		<class>com.ocherve.jcm.model.JcmBookingPK</class>
		<class>com.ocherve.jcm.model.JcmBookingStatus</class>
		<class>com.ocherve.jcm.model.JcmComment</class>
		<class>com.ocherve.jcm.model.JcmContent</class>
		<class>com.ocherve.jcm.model.JcmContentPK</class>
		<class>com.ocherve.jcm.model.JcmContentType</class>
		<class>com.ocherve.jcm.model.JcmCotation</class>
		<class>com.ocherve.jcm.model.JcmDocument</class>
		<class>com.ocherve.jcm.model.JcmImage</class>
		<class>com.ocherve.jcm.model.JcmMedia</class>
		<class>com.ocherve.jcm.model.JcmMessage</class>
		<class>com.ocherve.jcm.model.JcmRole</class>
		<class>com.ocherve.jcm.model.JcmSite</class>
		<class>com.ocherve.jcm.model.JcmTopo</class>
		<class>com.ocherve.jcm.model.JcmUser</class>
		<class>com.ocherve.jcm.model.JcmVideo</class>
		<properties>
			<!-- partie JPA générique -->
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:10432/amiesca?characterEncoding=utf8" />
			<property name="javax.persistence.jdbc.user" value="amiesca" />
			<property name="javax.persistence.jdbc.password"
				value="amiesca" />

			<!-- partie spécifique Hibernate -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQL10Dialect" />
			<!--   property name="hibernate.hbm2ddl.auto" value="create-drop" / -->
		</properties>
	</persistence-unit>

</persistence>